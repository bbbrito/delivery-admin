.pace
  position fixed
  width 100%
  height 100%
  z-index 20
  background rgba(255,255,255, .3)


.pace-inactive
  display none


.pace-progress
  background #722872
  position fixed
  z-index 2000
  top 0
  right 100%
  width 100%
  height 3px


.pace-progress-inner
  display block
  position absolute
  right 0
  width 100px
  height 100%
  box-shadow 0 0 10px #722872, 0 0 5px #722872
  opacity 1.0
  transform rotate(3deg) translate(0px, -4px)


.pace-activity
  display block
  position absolute
  z-index 2000
  top 50%
  left 50%
  transform translateY(-50%)
  width 40px
  height 40px
  border solid 2px transparent
  border-top-color #722872
  border-left-color #722872
  border-radius 50%
  animation pace-spinner 400ms linear infinite


.pace-inner
  position relative


@keyframes pace-spinner
  0%
    transform rotate(0deg)
  100%
    transform rotate(360deg)


.feedback-blind
  background hsla(0,0%,100%,.4)
  position fixed
  height 100%
  width 100%
  z-index 1060
  top 0
  left 0
  right 0
  bottom 0


.feedback-blind .pace-feedback
  width 40px
  height 40px
  border-radius 40px
  margin-left -20px
  border-width 2px
  top 50%
  left 50%
  position absolute

